{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "target": "es6",
    "jsx": "react-jsx",
    "lib": ["es6", "dom"],
    "strict": true,
    "typeRoots": [
      "./node_modules/@types",
      "./node_modules/@figma",
      "src/@types"
    ],
    "baseUrl": "./",
    "paths": {
      "@/*": ["src/*"]
    }
  },
  "include": ["src/**/*", "typings-custom/**/*.ts", "@types"],
  "exclude": ["**/node_modules"]
}
